<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="after.body.start">
            <block class="Tagalys\Sync\Block\Tagalys" name="tagalys_handler" template="tagalys_handler.phtml">
                <block class="Tagalys\Sync\Block\Tagalys" name="tagalys" template="tagalys.phtml" />
                <block class="Tagalys\Sync\Block\Tagalys" name="tagalys_legacy" template="tagalys_legacy.phtml" />
            </block>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block class="Tagalys\Sync\Block\Track" name="track_handler" template="track_handler.phtml">
                <block class="Tagalys\Sync\Block\Track" name="track" template="track.phtml"/>
                <block class="Tagalys\Sync\Block\Track" name="track_legacy" template="track_legacy.phtml"/>
            </block>
        </referenceContainer>
    </body>
</page>
