<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="cdnjs-js" type="host">https://cdnjs.cloudflare.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="cdnjs-css" type="host">https://cdnjs.cloudflare.com</value>
            </values>
            <values>
                <value id="tagalys-s3-css" type="host">https://tagalys-assets.s3-ap-southeast-1.amazonaws.com</value>
            </values>
            <values>
                <value id="bootstrapcdn-css" type="host">https://stackpath.bootstrapcdn.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="tagalys-images" type="host">https://www.tagalys.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>